MGY = y + lengthdir_y(10,point_direction(x,y,mouse_x,mouse_y) + 50)

MGX2 = x + lengthdir_x(10,point_direction(x,y,mouse_x,mouse_y)  - 50)
MGY2 = y + lengthdir_y(10,point_direction(x,y,mouse_x,mouse_y) - 50)

//Schuss laden
if shot_charge_prim &lt; 30
    shot_charge_prim += 1

if shot_charge_sec &lt; 10
    shot_charge_sec += 1

//Richtung
direction = dirmerk
//Steuerung
if keyboard_check(ord('D'))
{
    if speed == 0
        dirmerk -= 2
    
    if lastpressed = "w"        
    direction -= 2
    else if lastpressed = "s"
    direction += 2
}

if keyboard_check(ord('A'))
{
    if speed == 0
        dirmerk += 2
    
    if lastpressed = "w"        
    direction += 2
    else if lastpressed = "s"
    direction -= 2
}

if keyboard_check(ord('W'))
{
    lastpressed = "w"
    speed = 3
}
if keyboard_check(ord('S'))
{
    lastpressed = "s"
    speed = -3
}

if keyboard_check(vk_escape)
{
    game_save("WOH.save")
    room_goto(Menu)
}    

//schiessen

if mouse_check_button_pressed(mb_left)
{   
    if global.ptower = "MiniMG" or global.ptower = "Mini"
    {
        if shot_charge_prim &gt;= 30
        {
        shot_index = 1
        //sound_play(snd_shot)
        //audio_play_sound(snd_shot, true, 0) //&lt;- Das nur wenn NEw AUdio Engine
        shotsound = sga_TrackPlay(-1, global.soundf + "snd_shot.ogg", 0, 0)
        sga_SetVol(shotsound, global.sfxv)
        
        id_bullet = instance_create(x,y,obj_bullet)
        id_bullet.direction = point_direction(x,y,mouse_x,mouse_y)
        id_bullet.image_angle = point_direction(x,y,mouse_x,mouse_y)
        id_bullet.speed = 12
        shot_charge_prim = 0
        }
    }
}    

if mouse_check_button(mb_right)
{   
    if global.ptower = "MiniMG"
    {
        if shot_charge_sec &gt;= 10
        {
        //sound_play(snd_mgshot)
        shotsoundMG = sga_TrackPlay(-1, global.soundf + "snd_mgshot.ogg", 0, 0)
        sga_SetVol(shotsoundMG, global.sfxv)
        
        id_bullet1 = instance_create(MGX,MGY,obj_MGbullet)
        id_bullet1.direction = point_direction(x,y,mouse_x,mouse_y)
        id_bullet1.image_angle = point_direction(x,y,mouse_x,mouse_y)
        id_bullet1.speed = 12
        
        id_bullet2 = instance_create(MGX2,MGY2,obj_MGbullet)
        id_bullet2.direction = point_direction(x,y,mouse_x,mouse_y)
        id_bullet2.image_angle = point_direction(x,y,mouse_x,mouse_y)
        id_bullet2.speed = 12
        
        shot_charge_sec = 0
        }
    }
} 

//Mauern Debug Horizontal    
//if  place_free(x,y+vspeed) == false
