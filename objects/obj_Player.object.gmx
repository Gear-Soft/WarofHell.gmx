            <kind>1</kind>
            <string>//Richtung
dirmerk = direction
shot_index = 0

if speed &gt; 0 and keyboard_check(ord("W")) == false
    speed -= 0.1
else if speed &lt; 0 and keyboard_check(ord("S")) == false
    speed += 0.1

MGX = x + lengthdir_x(10,point_direction(x,y,mouse_x,mouse_y) + 50)
MGY = y + lengthdir_y(10,point_direction(x,y,mouse_x,mouse_y) + 50)

MGX2 = x + lengthdir_x(10,point_direction(x,y,mouse_x,mouse_y)  - 50)
MGY2 = y + lengthdir_y(10,point_direction(x,y,mouse_x,mouse_y) - 50)

//Schuss laden
if shot_charge_prim &lt; 30
    shot_charge_prim += 1

if shot_charge_sec &lt; 10
    shot_charge_sec += 1

//Richtung
direction = dirmerk
//Steuerung
if keyboard_check(ord('D'))
{
    if speed == 0
        dirmerk -= 1
    
    if lastpressed = "w"        
    direction -= 1
    else if lastpressed = "s"
    direction += 1
}

if keyboard_check(ord('A'))
{
    if speed == 0
        dirmerk += 1
    
    if lastpressed = "w"        
    direction += 1
    else if lastpressed = "s"
    direction -= 1
}

if keyboard_check(ord('W'))
{
    lastpressed = "w"
    if speed &lt; max_speed
        speed += 0.05
    else if speed &gt; max_speed
        speed = max_speed
}
if keyboard_check(ord('S'))
{
    lastpressed = "s"
    if speed &gt; 0
        speed -= 0.5
    else if speed &gt; min_speed
        speed -= 0.05
    else if speed &lt; min_speed
        speed = min_speed
}

if keyboard_check(vk_escape)
{
    game_save("WOH.save")
    room_goto(Menu)
}    

//schiessen

if mouse_check_button_pressed(mb_left)
{   
    if global.ptower = "MiniMG" or global.ptower = "Mini"
    {
        if shot_charge_prim &gt;= 30
        {
        shot_index = 1
        //sound_play(snd_shot)
        audio_play_sound(snd_shot, true, 0) //&lt;- Das nur wenn NEw AUdio Engine
        
        id_bullet = instance_create(x,y,obj_bullet)
        id_bullet.direction = tower_dir
        id_bullet.image_angle = tower_dir
        id_bullet.speed = 12
        shot_charge_prim = 0
        }
    }
}    

if mouse_check_button(mb_right)
{   
    if global.ptower = "MiniMG"
    {
        if shot_charge_sec &gt;= 10
        {
        //sound_play(snd_mgshot)
        audio_play_sound(snd_mgshot, true, 0)
        
        id_bullet1 = instance_create(MGX,MGY,obj_MGbullet)
        id_bullet1.direction = point_direction(x,y,mouse_x,mouse_y)
        id_bullet1.image_angle = point_direction(x,y,mouse_x,mouse_y)
        id_bullet1.speed = 12
        
        id_bullet2 = instance_create(MGX2,MGY2,obj_MGbullet)
        id_bullet2.direction = point_direction(x,y,mouse_x,mouse_y)
        id_bullet2.image_angle = point_direction(x,y,mouse_x,mouse_y)
        id_bullet2.speed = 12
        
        shot_charge_sec = 0
        }
    }
} 

//Mauern Debug Horizontal    
//if  place_free(x,y+vspeed) == false
//    vspeed = 0  
    
if place_free(x+hspeed,y) == false
{
  if hspeed &gt; 0
    move_contact_solid(0,-1)
  if hspeed &lt; 0
    move_contact_solid(180,-1)

  hspeed = 0
}


// Mauern Debug Vertikal

if place_free(x,y+vspeed) == false
{
  if vspeed &gt; 0
    move_contact_solid(270,-1)
  if vspeed &lt; 0
    move_contact_solid(90,-1)

  vspeed = 0
}

if speed == 0
    direction = dirmerk


view_xview = ((x-view_wview/2) +view_xview*9)/10
view_yview = ((y-view_hview/1.5) +view_yview*9)/10

// Kamera Perspektive
if view_xview &lt; 0
    view_xview = 0
if view_yview &lt; 0
    view_yview = 0
if view_xview &gt; room_width-view_wview
    view_xview = room_width-view_wview  
if view_yview &gt; room_height-view_hview
    view_yview = room_height-view_hview
    
var mdir, dir_dif, dir_speed;
dir_speed = 1.5; //Drehgeschwindigkeit
mdir = point_direction(x,y,mouse_x,mouse_y);
dir_dif = ((((tower_dir - mdir) mod 360) + 540) mod 360) - 180;
if(dir_dif &gt; 0)
{
if(abs(dir_dif) &gt; dir_speed)
tower_dir -= dir_speed;
else
tower_dir = mdir;
}
else
{
if(abs(dir_dif) &gt; dir_speed)
tower_dir += dir_speed;
else
tower_dir = mdir;
}

//lastpointed_dir = round(point_direction(x,y,mouse_x,mouse_y))
